<html>
  <head>
    <style>
      .grey-bg {
        background: #eee;
      }
      .white-bg {
        background: white;
        margin: 20px;
        border-radius: 5px;
      }
      .list-box {
        padding: 10px;
        border-bottom: 1px solid#eee;
      }
      .list-box h4 {
        font-size: 16px;
        margin: 5px;
      }
      .list-box p {
        font-size: 13px;
        margin: 5px;
        color: grey;
      }
    </style>
  </head>
  <body class="grey-bg">
    <%- include('header.ejs') %>
    <div class="white-bg">
      <% for(let i=0; i<cats.length; i++){%>

        <div class="list-box">
          <a href='/cat/<%= cats[i]._id %>'><h4>이름 : <%= cats[i].name %></h4></a>
          <p>나이 : <%= cats[i].age %></p>
        </div>
        
      <%}%>
    </div>
  </body>
</html>
